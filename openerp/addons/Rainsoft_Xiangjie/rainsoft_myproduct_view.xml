<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="rainsoft_myproduct_form_view">
			<field name="name">rainsoft.myproduct.form.view</field>
			<field name="model">rainsoft.myproduct</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="myproduct">
					<field name="product_id" required='True' />
                    <field name="amount" />
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="rainsoft_myprodct_tree_view">
			<field name="name">rainsoft.myproduct.tree.view</field>
			<field name="model">rainsoft.myproduct</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="myproduct">
					<field name="product_id"/>
                    <field name="amount"/>
				</tree>
			</field>
		</record>
	</data>
</openerp>
